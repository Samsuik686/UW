<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#FFF" />
        </shape>
    </item>
    <item
        android:bottom="1px"
        android:left="0px"
        android:right="0px"
        android:top="-2px">
        <shape>
            <stroke
                android:width="1px"
                android:color="#ccc" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:top="10dp"
                android:right="10dp"
                android:left="10dp"
                android:bottom="10dp"
                />
        </shape>

    </item>

</layer-list>


